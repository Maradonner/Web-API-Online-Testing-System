@model List<TriviaQuestion>

@{
    ViewData["Title"] = "List of Questions";
}

<div class="row">
    <div class="col-md-8">
        <table>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        @foreach (var elem in item.Options)
                        {
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => elem.Title)
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>